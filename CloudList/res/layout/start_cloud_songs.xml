<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#818590"
    android:layout_centerHorizontal="true" >
    
    <LinearLayout
        android:id="@+id/layoutCloudList1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/tv_cloud_join_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Cloud"
            android:textColor="#3B3D49"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_cloud_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

	</LinearLayout>
	
   <LinearLayout
       android:id="@+id/layoutCloudList"
       android:layout_below="@+id/layoutCloudList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:layout_marginLeft="5dp"
    	android:layout_centerHorizontal="true"
    	android:background="#41444D" >



    <ImageView
        android:id="@+id/iv_song_image1"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="#FFFFFF"
        android:src="@drawable/ic_drawer2" />
    
    <LinearLayout
       	android:layout_width="275dp"
       	android:layout_height="wrap_content"
   		android:orientation="vertical">
   		
        <LinearLayout
            android:layout_width="match_parent"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal">
       		
            <TextView
		        android:id="@+id/tv_song_likes1"
		        android:layout_width="29dp"
		        android:layout_height="25dp"
		        android:layout_weight="0"
		        android:gravity="center"
		        android:text="10"
		        android:textColor="#000000"
		        android:textSize="15sp" />

		    <Button
		        android:id="@+id/button_like1"
		        android:layout_width="28dp"
		        android:layout_height="25dp"
		        android:layout_weight="0"
		        android:background="#FFFFFF" />
		    
		    <SeekBar
		        android:id="@+id/songProgressBar"
		        android:layout_width="165dp"
		        android:layout_height="wrap_content"
		        android:progressDrawable="@drawable/seekbar_progress"
		        android:thumb="@drawable/seek_handler" />
		    
		    <Button
		        android:id="@+id/button_dislike1"
		        android:layout_width="28dp"
		        android:layout_height="25dp"
		        android:layout_weight="0"
		        android:background="#DE6141" />
		
		    <TextView
		        android:id="@+id/tv_song_dislikes1"
		        android:layout_width="28dp"
		        android:gravity="center"
		        android:layout_height="25dp"
		        android:layout_weight="0"
		        android:text="0"
		        android:textColor="#000000"
		        android:textSize="15sp"
		         />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="275dp"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal">

		    <TextView
		        android:id="@+id/tv_song_name1"
		        android:layout_width="275dp"
		        android:layout_height="25dp"
		        android:layout_marginLeft="5dp"
		        android:gravity="center_vertical"
		        android:text="Danny Brown - Dope Song (Side B)"
		        android:textColor="#000000"
		        android:textSize="12sp" />
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <ListView
        android:id="@+id/songs_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutCloudList"
        android:background="#818590"
        android:divider="@android:color/transparent"
    	android:dividerHeight="4dp"
    	android:layout_marginTop="18dp"
    	android:layout_marginBottom="5dp"
    	android:clickable="true"
    	android:layout_centerHorizontal="true"
    	android:descendantFocusability="beforeDescendants"
    	/>
    
</RelativeLayout>