<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#818590" >

    <TextView
        android:id="@+id/textViewCloud1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="25dp"
        android:text="Cloud"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="#DE6141"
        android:onClick="onStart"
        android:text="Start"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewCloud1"
        android:layout_alignBottom="@+id/textViewCloud1"
        android:layout_toLeftOf="@+id/textViewCloud1"
        android:text="Start"
        android:textColor="#3B3D49"
        android:textSize="50sp" />

</RelativeLayout>