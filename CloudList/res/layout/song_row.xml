<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#818590"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_song_number"
        android:layout_width="27dp"
        android:layout_height="match_parent"
        android:background="#313139"
        android:text="1"
        android:layout_weight="0"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/iv_song_image"
        android:layout_width="27dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#FFFFFF"
        android:src="@drawable/ic_drawer2" />

    <TextView
        android:id="@+id/tv_song_likes"
        android:layout_width="27dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:text="10"
        android:textColor="#000000"
        android:textSize="15sp"
        android:background="#41444D" />

    <Button
        android:id="@+id/button_like"
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#FFFFFF"
        android:focusable="false"
		android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:text="Danny Brown - Dope Song (Side B)"
        android:textColor="#000000"
        android:textSize="12sp"
        android:background="#41444D"
        android:focusable="false"
		android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/button_dislike"
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#DE6141"
        android:focusable="false"
		android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/tv_song_dislikes"
        android:layout_width="26dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:text="0"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginRight="5dp"
        android:background="#41444D" />

</LinearLayout>