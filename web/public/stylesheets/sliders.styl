/*
 * Import nib
 */
@import 'nib'

light-back-color = #818590
mid-back-color = #5a5e6a
dark-back-color = #383b42
main-red = #de6143
main-white = #e5e8ef



.sliderPane {
   top: 30%;
   width: 100%;
   height: 70%;
   background-color: #757985;
   position: absolute;
   z-index: 5;
   display: none;
}

.sliderToggle {
    height: 4em;
    width: 3em;
    padding: 0.1em;
    background-color: red;
    position: absolute;
    top: 30%;
    z-index: 10;
    cursor: pointer;
}


#musicSlider {
    left: 0;
    background: url('/resources/images/note.svg') no-repeat center;
    background-size: 50%;
    border-radius: 0 0 0.5em 0;
    /*box-shadow: 0.2em 0.2em 0.75em;*/
    background-color: #de6143;
    box-shadow: 0px 3px 0px 0px #bd4021;
}

#musicSlider:hover {
  background-color: #dc5636;
}

#musicSlider:active {
  background-color: #d94826;
}


#pictureSlider {
    right: 0;
    background: url('/resources/images/camera.svg') no-repeat center;
    background-size: 50%;
    border-radius: 0 0 0 0.5em;
    /*box-shadow: -0.2em 0.2em 0.75em;*/
    background-color: #de6143;
    box-shadow: 0px 3px 0px 0px #bd4021;
}

#pictureSlider:hover {
  background-color: #dc5636;
}

#pictureSlider:active {
  background-color: #d94826;
}

#musicPaneContainer
	padding 20px

#musicPaneContainer > p
	margin 10px
